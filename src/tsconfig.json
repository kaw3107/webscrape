{
    "compilerOptions":{
        "target":"es2020",
        "module":"commonjs",
        "outDir":"./dist",
        "rootDir":"./",
        "strict":true,
        "sourceMap": true,
        "inlineSources": true,
        "strictPropertyInitialization":false,
        "moduleResolution":"node",
        "baseUrl":".",
        "typeRoots":[
            "./node_modules/@types"
        ],
        "esModuleInterop":true,
        "experimentalDecorators":true,
        "emitDecoratorMetadata":true,
        "skipLibCheck":true,
        "forceConsistentCasingInFileNames":true
    },
    "include":[
        "tests/**/*.ts"
    ],
    "exclude":[
        "node_modules"
    ]
}